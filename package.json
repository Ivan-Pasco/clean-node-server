{
  "name": "@ivan-pasco/clean-node-server",
  "version": "0.1.2",
  "description": "Node.js host bridge for Clean Language WASM modules",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "clean-node-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "clean-language",
    "wasm",
    "webassembly",
    "server",
    "runtime"
  ],
  "author": "Ivan Pasco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ivan-Pasco/clean-node-server.git"
  },
  "bugs": {
    "url": "https://github.com/Ivan-Pasco/clean-node-server/issues"
  },
  "homepage": "https://github.com/Ivan-Pasco/clean-node-server#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "commander": "^12.0.0",
    "pg": "^8.11.3",
    "better-sqlite3": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/better-sqlite3": "^7.6.8",
    "@types/pg": "^8.10.9",
    "@types/cookie-parser": "^1.4.6",
    "vitest": "^2.0.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
